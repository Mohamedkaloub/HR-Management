@model Employee
<h1 dir="rtl" >تسجيل موظف جديد</h1>
<form method="post" dir="rtl"  >
    <div class="row">
  <div class="col-sm-3">
    <div class="form-group">
      <label  class="form-label mt-4 ">كود الموظف</label>
      <input asp-for="Emp_code" type="text" class="form-control"  placeholder="ادخل الكود">
    </div>
  </div>
  <div class="col-sm-9">
    <div class="form-group">
       <label  class="form-label mt-4">الاسم</label>
      <input asp-for="Name" type="text" class="form-control"  placeholder="الاسم">
    </div>
  </div>
</div>
 <div class="row">
  <div class="col-sm-8">
    <div class="form-group">
     <label  class="form-label mt-4">العنوان</label>
      <input asp-for="Address" type="text" class="form-control"  placeholder="العنوان">
    </div>
  </div>
  <div class="col-sm-4">
    <div class="form-group">
       <label  class="form-label mt-4">الرقم القومي</label>
        <input asp-for="Nat_id" type="text" class="form-control"  placeholder="الرقم القومي">
    </div>
  </div>
</div>
       
     <div class="form-group">
       <label  class="form-label mt-4">المؤهل</label>
      <input asp-for="Qualif" type="text" class="form-control"  placeholder="المؤهل">
    </div>
          <div class="row">
  <div class="col-sm-4">
    <div class="form-group">
      <label  class="form-label mt-4">تاريخ التعيين</label>
      <input asp-for="Hire_date" type="date" class="form-control"  placeholder="تاريخ التعيين">
    </div>
  </div>

         <div class="col-sm-4">
    <div class="form-group">
       <label  class="form-label mt-4">تاريخ التسوية</label>
      <input asp-for="Ret_date" type="date" class="form-control"  placeholder="تاريخ التسوية">
    </div>
       </div>
        <div class="col-sm-3">
            <label  class="form-label mt-4 "></label>
<div class="form-group mt-3">            
            <a type="button" class="btn btn-success col-3
" asp-controller="RetReason" asp-action="Create" asp-route-code=@Model.Emp_code>سبب</a>
            </div>
            </div>
       </div>
      <div class="row">
  <div class="col-sm-4">
    <div class="form-group">
              <label  class="form-label mt-4">الوظيفة</label>
      <select asp-items="ViewBag.JobList" asp-for="JobId" class="form-control">
			<option value="0" disabled selected >ادخل الوطيفة</option>
				</select>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="form-group">
        <label  class="form-label mt-4">القسم</label>
      <select asp-items="ViewBag.DerpartmentList" asp-for="DepartmentId" class="form-control">
			<option value="0" disabled selected >ادخل القسم</option>
				</select>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="form-group">
        <label  class="form-label mt-4">الادارة</label>
     <select asp-items="ViewBag.ManagementList" asp-for="ManagmentId" class="form-control">
			<option value="0" disabled selected >ادخل الادارة</option>
            </select>
    </div>
  </div>
</div>
<div class="row">
 <div class="form-group col-6">
            <button type="submit" class="btn btn-primary col-2 mt-2">حفظ</button>
            </div>
<div class="form-group col-6">
            <button asp-action="Index" asp-controller="Employee" class="btn btn-primary col-2 mt-2">رجوع</button>
            </div>
            </div>
                        
</form>

 @section scripts{
 <script src="/js/pdf.js"></script>
 }